<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_8sdp"
    app:cardBackgroundColor="@color/grey_100"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">

        <TextView
            android:id="@+id/tv_summary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="@color/green"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1 Cup Rice" />

        <TextView
            android:id="@+id/tv_calories_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            android:text="@string/calories"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_summary_title" />

        <TextView
            android:id="@+id/tv_calories_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            tools:text="720 kcal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_calories_title"
            app:layout_constraintTop_toTopOf="@id/tv_calories_title" />

        <TextView
            android:id="@+id/tv_weight_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            android:text="@string/weight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_calories_title" />

        <TextView
            android:id="@+id/tv_weight_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_16sdp"
            android:textSize="@dimen/_14ssp"
            tools:text="40 g"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_weight_title"
            app:layout_constraintTop_toTopOf="@id/tv_weight_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>